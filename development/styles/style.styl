body
	font-family "Tahoma", sans-serif, "Arial"
	
.body-bg
	&:before
		content ''
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		z-index 12
		opacity 0
		cursor pointer
	
a
	color black
	text-decoration none
	
ul
	list-style-type none
	
.wr-form_datas
	width 400px
	margin 200px auto
	transition all .5s

	&-inp
		display inline-block
		vertical-align middle
		outline none
		border 0
		height 35px
		line-height 35px
		font-size 16px
		box-shadow 0px 0px 6px 2px rgba(black, .5)
		border-radius 5px
		width 300px
		padding 0 15px
		box-sizing border-box
	
	&-btn
		cursor pointer
		display inline-block
		vertical-align middle
		outline none
		height 37px
		line-height 34px
		color white
		background #5cb85c
		border 1px solid #4cae4c
		border-radius 5px
		box-sizing border-box
		
		&:hover
			background-color #449d44
			border-color #398439
			
.wr-blocks-w
	width 550px
	margin 50px auto
	text-align center
	
.wr-block
	margin-bottom 20px
	text-align left
	
	&-img
		display inline-block
		vertical-align middle
		width 100px
		height 100px
		margin-right 20px
		border 1px solid #c2c2c2	
		
	&-comment
		display inline-block
		vertical-align middle
		margin -25px 20px 0 0
		
		&-lb-text
			display block
			margin-bottom 15px
			color #8E8989
			font-size 18px
			
		&-lb-inp
			width 300px	
			border 0
			outline 0
			height 35px
			line-height 35px 
			font-size 16px
			box-shadow 0px 0px 6px 2px rgba(black, .5)
			border-radius 5px
			padding 0 15px
			box-sizing border-box
	
	&-delete
		display inline-block
		vertical-align middle
		color #8E8989
		
		&:hover
			color black
			border-bottom 1px dashed black

.wr-form_blocks-btn
	cursor pointer
	display inline-block
	vertical-align middle
	outline none
	height 37px
	line-height 34px
	color white
	background #5cb85c
	border 1px solid #4cae4c
	border-radius 5px
	box-sizing border-box
	
	&:hover
		background-color #449d44
		border-color #398439
		

.slider-w
	width 600px
	height 400px
	margin 0px auto 50px
	position relative
	overflow hidden 
	
.slider 
	padding 0
	width 100%
	position absolute
	top 0
	left 0
	white-space nowrap
	// transition all .5s
	font-size 0
	
	& li
		display inline-block
		vertical-align top
		width 100%
		height 400px
		font-size 16px
		
		& div
			height 100%
		

.one 
	background #ccc
	
.two
	background #8e8e8e
	
.three
	background #000

.four
	background #d1ddd1
	
.slider-arrow
	position absolute
	top 50%
	left 5px
	width 40px
	height 40px
	background 	white
	z-index 2	
	margin-top -20px
	border-radius 50%

.slider-arrow[data-slide="1"]
	right 5px
	left inherit
			
.wr-download
	width 50px
	height 50px
	border-radius 50%
	border 2px solid #000
	border-right 0
	border-bottom 0
	margin 0 auto
	position relative
	animation: around-to 1700ms linear infinite
	border 0
	
	&:before
		content ''
		position absolute
		top 50%
		left 50%
		width 38px
		height 38px
		border-radius 50%
		border 2px solid #000
		margin -19px 0 0 -19px
		border-bottom 0
		border-right 0
		animation: around-from 2000ms linear infinite
		
	&:after
		content ''
		position absolute
		top 50%
		left 50%
		width 20px
		height 20px
		border-radius 50%
		border 2px solid #000
		margin -10px 0 0 -10px
		border-bottom 0
		border-right 0
		animation: around-to 2000ms linear infinite
		
@keyframes around-to
	100%
		transform rotate(360deg)
		
@keyframes around-from
	100%
		transform rotate(360deg)